{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-rpr-learn"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/PL_SAP_FILE_TO_DB_EKKO')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy EKKO CSV file to DB",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": false,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "EBELN",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "EBELN",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "BUKRS",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "BUKRS",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "BSTYP",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "BSTYP",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "BSART",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "BSART",
											"type": "String",
											"physicalType": "varchar"
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "DS_STOR_SOURCE_EKKO",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DS_SQLDB_SINK_EKKO",
								"type": "DatasetReference"
							}
						]
					}
				],
				"folder": {
					"name": "Static"
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DS_STOR_SOURCE_EKKO')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DS_STOR_SOURCE_EKKO')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "CSV file",
				"linkedServiceName": {
					"referenceName": "LS_STOR_LEARN_OWNER",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "Static"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "TEC_EKKO_2020_001 - Test_1.csv",
						"folderPath": "SAP/ECC/TEC/EKKO",
						"container": "dls-private"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "MANDT",
						"type": "String"
					},
					{
						"name": "EBELN",
						"type": "String"
					},
					{
						"name": "BUKRS",
						"type": "String"
					},
					{
						"name": "BSTYP",
						"type": "String"
					},
					{
						"name": "BSART",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		}
	]
}